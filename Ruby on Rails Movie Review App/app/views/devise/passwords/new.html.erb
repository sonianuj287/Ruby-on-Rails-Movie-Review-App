<div  style="background-color: #030b33; color: white; padding-left: 5%; width: 40%; margin-left: 30%; border-radius: 8px;">

<br>	<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "abc" %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions",  class: "btn btn-warning" %>
  </div>
<% end %>
<br>

<%= render "devise/shared/links" %>
<br>
</div>